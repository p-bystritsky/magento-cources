<config>
    <modules>
        <Bystritsky_Action>
            <version>0.1.1</version>
        </Bystritsky_Action>
    </modules>
    <admin>
        <routers>
            <bystritsky_action_admin>
                <use>admin</use>
                <args>
                    <module>Bystritsky_Action</module>
                    <frontName>action_admin</frontName>
                </args>
            </bystritsky_action_admin>
        </routers>
    </admin>
    <frontend>
        <routers>
            <bystritsky_action>
                <use>standard</use>
                <args>
                    <module>Bystritsky_Action</module>
                    <frontName>action</frontName>
                </args>
            </bystritsky_action>
        </routers>
        <layout>
            <updates>
                <bystritsky_action>
                    <file>bystritsky_action.xml</file>
                </bystritsky_action>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <bystritsky_action>
                <class>Bystritsky_Action_Model</class>
                <resourceModel>bystritsky_action_resource</resourceModel>
            </bystritsky_action>
            <bystritsky_action_resource>
                <class>Bystritsky_Action_Model_Resource</class>
                <entities>
                    <action>
                        <table>action_actions</table>
                    </action>
                </entities>
            </bystritsky_action_resource>
        </models>
        <resources>
            <action_setup>
                <setup>
                    <module>Bystritsky_Action</module>
                    <class>Bystritsky_Action_Model_Resource_Setup</class>
                </setup>
            </action_setup>
        </resources>
        <blocks>
            <bystritsky_action>
                <class>Bystritsky_Action_Block</class>
            </bystritsky_action>
        </blocks>
        <helpers>
            <bystritsky_action>
                <class>Bystritsky_Action_Helper</class>
            </bystritsky_action>
        </helpers>
    </global>
    <adminhtml>
        <menu>
            <bystritsky_action module="bystritsky_action">
                <title>Actions</title>
                <sort_order>77</sort_order>
                <action>bystritsky_action_admin/adminhtml_actions</action>
            </bystritsky_action>
        </menu>
    </adminhtml>
    <crontab>
        <jobs>
            <bystritsky_action_update_status>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>bystritsky_action/action::updateStatus</model>
                </run>
            </bystritsky_action_update_status>
        </jobs>
    </crontab>
</config>